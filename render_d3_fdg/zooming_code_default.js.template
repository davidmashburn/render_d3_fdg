function zoomed() {
  fdg_svg.selectAll("g").attr("transform", d3.event.transform);
}

fdg_svg.append("rect")
       .attr("width", width)
       .attr("height", height)
       .style("fill", "none")
       .style("pointer-events", "all")
       .call(d3.zoom()
           .scaleExtent([${zoom_in}, ${zoom_out}])
           .on("zoom", zoomed));
